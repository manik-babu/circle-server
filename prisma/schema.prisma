generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id         String     @id @default(uuid())
  caption    String
  attachment String?
  authorId   String
  status     PostStatus
  comments   Comment[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([authorId])
}

model Comment {
  id        String    @id @default(uuid())
  content   String
  authorId  String //? handle with better auth
  postId    String
  post      Post      @relation(fields: [postId], references: [id])
  parantId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parantId], references: [id])
  replies   Comment[] @relation("CommentReplies")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([postId])
  @@index([parantId])
}

enum PostStatus {
  PRIVATE
  PUBLIC
}
